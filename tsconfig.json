{
  "compilerOptions": {
    "target": "ES2020",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "module": "CommonJS",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "useUnknownInCatchVariables": false,
    "types": [
      "vitest/globals"
    ],
  },
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register",
      "./config.ts"
    ],
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "config.ts",
    "scripts",
    "eslint.config.ts",
    "vitest.config.mts"
  ],
  "exclude": [
    "src/public/*"
  ]
}